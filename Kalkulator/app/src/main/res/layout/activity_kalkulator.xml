<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kalkulator">
    <TextView
        android:layout_width="match_parent"
        android:text="KALKULATOR"
        android:textSize="30dp"
        android:textColor="@color/biru"
        android:textAlignment="center"
        android:background="@color/kuning"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:text="ANGKA 1 :"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/angka1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:text="ANGKA 2 :"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/angka2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tblHitung"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink"
            android:onClick="hitung"
            android:text="TAMBAH"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/tblKurang"
            android:layout_marginLeft="20dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink"
            android:onClick="kurang"
            android:text="KURANG"
            android:textAlignment="center"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tblKali"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink"
            android:onClick="kali"
            android:text="KALI"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/tblBagi"
            android:layout_marginLeft="20dp"
            android:layout_width="180dp"
            android:text="BAGI"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:onClick="bagi"
            android:backgroundTint="@color/pink"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hasil"
            android:layout_width="150dp"
            android:text="HASIL"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>