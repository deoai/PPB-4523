<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Buat Hero Andalanmu"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texttitle"
        android:hint="Nama Hero"
        android:textColorHint="@color/white"
        android:textColor="@color/aurora3"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterampilan"
        android:textSize="24dp"
        android:textColorHint="@color/white"
        android:textColor="@color/aurora3"
        android:layout_below="@+id/name" />

    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Role Hero"
        android:textSize="24dp"
        android:textColorHint="@color/white"
        android:textColor="@color/aurora3"
        android:layout_below="@+id/contact" />

    <EditText
        android:id="@+id/damage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob"
        android:hint="Damage Hero"
        android:textColorHint="@color/white"
        android:textColor="@color/aurora3"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/biografi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/damage"
        android:hint="Biografi Hero"
        android:textColorHint="@color/white"
        android:textColor="@color/aurora3"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Insert New Data"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/dob"
        android:backgroundTint="@color/aurora4"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Update Data"
        android:backgroundTint="@color/aurora1"
        android:layout_below="@+id/btnInsert"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Delete Existing Data"
        android:backgroundTint="@color/aurora2"
        android:layout_below="@+id/btnUpdate"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="View Data"
        android:backgroundTint="@color/aurora3"
        android:layout_below="@+id/btnDelete"/>

</RelativeLayout>